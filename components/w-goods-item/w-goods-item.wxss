/* components/w-goods-item/w-goods-item.wxss */

.goods-item {
  text-align: center;
  color: #333;
  padding-bottom: 85rpx;
}

image {
  width: 100%;
  border-radius: 10rpx;
}

.desc-info {
  position: absolute;
  right: 0;
  left: 0;
  bottom: 5rpx;
}

.title {
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.info {
  font-size: 26rpx;
}

.price {
  color: #ff5777;
}

.info image {
  width: 30rpx;
  height: 30rpx;
  padding: 6rpx 6rpx 0 10rpx;
  margin-top: 2px;
  position: relative;
  bottom: -1rpx;
}

