<!--components/swiper/w-swiper.wxml-->
<swiper autoplay
        circular
        duration="500"
        interval="3000"
        indicator-dots
        indicator-active-color="#ff5777">
  <block wx:for="{{banners}}" wx:key="index">
    <swiper-item>
      <image src="{{item.image}}" mode="widthFix"/>
    </swiper-item>
  </block>
</swiper>
