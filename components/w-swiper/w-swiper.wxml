<!--components/w-swiper/w-swiper.wxml-->
<swiper autoplay
        interval="3000"
        duration="400"
        circular="{{true}}"
        indicator-dots="{{true}}"
        indicator-active-color="#ff5777">
  <block wx:for="{{banners}}" wx:key="index">
    <swiper-item>
      <image src="{{item.image}}" mode="widthFix"/>
    </swiper-item>
  </block>
</swiper>
