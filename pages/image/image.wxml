  重点: 
    1.image可以写成单标签，也可以写成双标签
    2.image组件默认有自己的大小: 320 X 240
    3.image是一个行内块级元素
 -->

<!-- <image></image> -->
<!-- <image/> -->

<!-- 2. src: 本地路径(绝对路径/相对路径)/远程地址-->
<!-- 相对路径 -->
<image src="../../assets/img/dijia.jpg" />
<!-- 绝对路径 -->
<image src="/assets/img/dijia.jpg" />
<!-- 远程地址 -->
<image src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" />

<!-- 相册中的图片 -->
<button bindtap="handleChooseAlbum">选中图片</button>
<image src="{{imagePath}}"></image>

<!-- 3.bindload: 监听图片加载完成 -->
<!-- lazy-load: 图片懒加载 -->
<view>------------------------------------</view>
<image wx:for="{{1}}" src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg" bindload="handleImageLoad" lazy-load></image>

<!-- 4.show-menu-by-longpress: 长按图片出现识别小程序码 -->
