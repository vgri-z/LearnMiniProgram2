<!-- 1.view的基本使用 -->
<!-- view是一个容器元素，独占一行，类似于div-->
<view class="box">哈哈哈</view>
<view>呵呵呵</view>

<!-- 2.hover-class: 当用户按下组件是显示的样式 -->
<!-- hover-stay-time: 手指松开后点击态保留的时间，默认400ms -->
<view class="box1" hover-class="hover-view" hover-stay-time="{{0}}">box1</view>

<!-- 3.hover-stop-propagation: 阻止本节点的祖先节点的点击态 -->
<view class="box2" hover-class="hovre-parent" hover-stay-time="{{0}}">
  <view 
    class="box1" 
    hover-class="hover-view" 
    hover-stay-time="{{0}}" hover-stop-propagation>
    box1
  </view>
</view>