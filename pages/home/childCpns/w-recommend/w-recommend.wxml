<!--pages/home/childCpns/recommend/recommend.wxml-->
<view class="recommend">
  <block wx:for="{{recommends}}" wx:key="index">
    <view class="recommend-item">
      <image src="{{item.image}}" mode="widthFix" bindload="handleImageLoad"></image>
      <view class="title">{{item.title}}</view>
    </view>
  </block>
</view>
